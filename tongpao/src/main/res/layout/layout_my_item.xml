<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_item_name"
        android:text="收货地址"
        android:gravity="center"
        android:drawableLeft="@drawable/ic_outline_location"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_attestation"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/img_into"
        app:layout_constraintBottom_toBottomOf="@id/img_into"
        app:layout_constraintRight_toLeftOf="@id/img_into"
        android:text="未认证"
        android:textColor="#f44336"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/img_into"
        app:layout_constraintTop_toTopOf="@id/tv_item_name"
        app:layout_constraintBottom_toBottomOf="@id/tv_item_name"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@mipmap/more_1x"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>