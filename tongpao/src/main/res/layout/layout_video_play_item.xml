<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <com.example.tongpao.myview.PlayVideoView
        android:id="@+id/video"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <ImageView
        android:id="@+id/img_back"
        android:layout_margin="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@mipmap/common_icon_back_white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/img_share"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="10dp"
        android:src="@mipmap/icon_omit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_like"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="200dp"
        android:text="0"
        android:layout_marginRight="10dp"
        android:textColor="@color/white"
        android:gravity="center_horizontal"
        android:drawableTop="@drawable/ic_like_white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_comment"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_like"
        android:layout_marginTop="10dp"
        android:text="0"
        android:textColor="@color/white"
        android:layout_marginRight="10dp"
        android:gravity="center_horizontal"
        android:drawableTop="@drawable/ic_comment_white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img_head"
            android:layout_marginLeft="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
        <ImageView
            android:id="@+id/img_level"
            android:src="@mipmap/lv7"
            app:layout_constraintLeft_toLeftOf="@id/img_head"
            app:layout_constraintRight_toRightOf="@id/img_head"
            app:layout_constraintBottom_toBottomOf="@id/img_head"
            android:layout_width="wrap_content"
            android:layout_height="15dp"/>
        <TextView
            android:id="@+id/tv_name"
            app:layout_constraintLeft_toRightOf="@id/img_head"
            app:layout_constraintTop_toTopOf="@id/img_head"
            app:layout_constraintBottom_toBottomOf="@id/img_head"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="aaaaa"
            android:maxEms="4"
            android:ellipsize="end"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_follow"
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:background="@drawable/selector_follow_bg"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingRight="10dp"
            android:paddingBottom="5dp"
            android:text="+关注"
            android:textColor="#F44336"
            android:textSize="12sp"
            android:layout_marginLeft="10dp"
            app:layout_constraintLeft_toRightOf="@id/tv_name"
            app:layout_constraintTop_toTopOf="@id/img_head"
            app:layout_constraintBottom_toBottomOf="@id/img_head"/>

        <TextView
            android:id="@+id/tv_content"
            app:layout_constraintTop_toBottomOf="@id/img_head"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginLeft="20dp"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>