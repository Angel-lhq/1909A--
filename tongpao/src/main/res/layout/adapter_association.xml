<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/img_ass_head"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/icon_back_black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_ass_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:text="132"
        android:textColor="#000"
        android:textSize="15sp"
        app:layout_constraintLeft_toRightOf="@id/img_ass_head"
        app:layout_constraintTop_toTopOf="@id/img_ass_head" />

    <TextView
        android:id="@+id/tv_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="5dp"
        android:text="1233"
        android:textSize="10sp"
        app:layout_constraintLeft_toRightOf="@id/img_ass_head"
        app:layout_constraintTop_toBottomOf="@id/tv_ass_name" />

    <TextView
        android:id="@+id/tv_activities"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="5dp"
        android:text="1233"
        android:textSize="10sp"
        app:layout_constraintLeft_toRightOf="@id/tv_ass_name"
        app:layout_constraintTop_toBottomOf="@id/tv_ass_name" />

    <TextView
        android:id="@+id/tv_ass_desc"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="4561"
        app:layout_constraintLeft_toRightOf="@id/img_ass_head"
        app:layout_constraintTop_toBottomOf="@id/tv_num" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_user_info_fllow"
        android:paddingLeft="10dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:paddingRight="10dp"
        android:text="加入"
        android:textColor="#ffffff"
        android:layout_marginLeft="300dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>