<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_marginTop="10dp">


        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:padding="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="50dp">

                <TextView
                    android:id="@+id/tv_nickName_roo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="879456123"
                    android:textColor="#000" />

                <TextView
                    android:id="@+id/tv_age_roo"
                    android:layout_width="25dp"
                    android:layout_height="15dp"
                    android:layout_below="@id/tv_nickName_roo"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/shape_activity_roommate"
                    android:drawableLeft="@mipmap/female"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:paddingTop="3dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="3dp" />

                <TextView
                    android:id="@+id/tv_location_roo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_age_roo"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:drawableLeft="@mipmap/icon_map_annotation"
                    android:gravity="center"
                    android:text="123456" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_location_roo"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/shape_focus_recommend"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:paddingTop="3dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="3dp"
                    android:text="+关注"
                    android:textColor="#FFACAC"
                    android:textSize="8sp" />
            </RelativeLayout>


        </androidx.cardview.widget.CardView>

        <ImageView
            android:id="@+id/img_header_roo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/tv_title_roo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/shape_activity_roommate"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="5dp"
            android:text="123456"
            android:textColor="#ffffff"
            android:textSize="10sp" />

    </RelativeLayout>


</RelativeLayout>