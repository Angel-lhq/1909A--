<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/findmass_header"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@mipmap/ic_launcher"
        android:layout_width="70dp"
        android:layout_height="70dp"/>
    <TextView
        android:id="@+id/findmass_name"
        android:layout_marginLeft="10dp"
        android:textColor="#0E0707"
        android:textSize="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/findmass_header"
        android:text="北京汉学会"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/find_tv_member"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/findmass_name"
        app:layout_constraintLeft_toRightOf="@id/findmass_header"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/find_tv_activity"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toBottomOf="@id/findmass_name"
        app:layout_constraintLeft_toRightOf="@id/find_tv_member"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/find_tv_content"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toRightOf="@id/findmass_header"
        app:layout_constraintTop_toBottomOf="@id/find_tv_member"
        android:layout_width="wrap_content"
        android:maxLength="11"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_margin="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:gravity="center"
        android:text="加入"
        android:background="@drawable/corners_avdio"
        android:layout_width="60dp"
        android:layout_height="30dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>