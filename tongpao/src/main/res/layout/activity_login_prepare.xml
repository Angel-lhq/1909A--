<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.example.tongpao.myview.CustomerVideoView
        android:id="@+id/videoView"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <ImageView
        android:id="@+id/img_back"
        android:layout_margin="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@mipmap/ucrop_ic_cross"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/img_cover"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="120dp"
        android:src="@mipmap/ic_launcher"
        android:layout_width="80dp"
        android:layout_height="80dp"/>

    <TextView
        android:id="@+id/txt_sentences"
        android:text="生活本就该诗情画意"
        android:layout_marginTop="50dp"
        android:textSize="18sp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/img_cover"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/btn_phone_login"
        android:text="手机号一键登录"
        android:gravity="center"
        android:paddingVertical="15sp"
        app:layout_constraintTop_toBottomOf="@id/txt_sentences"
        android:layout_marginTop="50dp"
        android:background="@drawable/btn_login_white_bg"
        android:layout_marginHorizontal="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/btn_pwd_login"
        app:layout_constraintTop_toBottomOf="@id/btn_phone_login"
        android:text="手机验证码或密码登录"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:paddingVertical="15sp"
        android:background="@drawable/btn_login_gray_bg"
        android:layout_marginHorizontal="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/btn_pwd_login"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img_qq"
            android:src="@drawable/umeng_socialize_qq"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
        <ImageView
            android:id="@+id/img_wechat"
            android:layout_marginLeft="20dp"
            android:src="@drawable/umeng_socialize_wechat"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
        <ImageView
            android:id="@+id/img_sina"
            android:layout_marginLeft="20dp"
            android:src="@drawable/umeng_socialize_sina"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
    </LinearLayout>

    <TextView
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="登陆就表示已阅读并同意同袍APP用户协议"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>