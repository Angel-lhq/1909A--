<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="5dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/find_hos_activity_iv_img"
        android:layout_width="150dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="100dp"/>
        <ImageView
            android:id="@+id/find_hos_activity_iv_sign"
            android:layout_marginRight="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:src="@mipmap/icon_activity_sign_ending"
            android:layout_width="30dp"
            android:layout_height="50dp"/>
    <TextView
        android:id="@+id/find_hos_activity_tv_content"
        app:layout_constraintLeft_toLeftOf="parent"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintTop_toBottomOf="@id/find_hos_activity_iv_img"
        android:layout_width="150dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/find_hos_activity_tv_place"
        android:text="信阳"
        android:textSize="10dp"
        android:maxLength="5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/find_hos_activity_tv_content"
        android:layout_width="wrap_content"
        android:drawableLeft="@mipmap/map"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/find_hos_activity_tv_time"
        app:layout_constraintTop_toBottomOf="@id/find_hos_activity_tv_content"
        app:layout_constraintRight_toRightOf="parent"
        android:maxLength="10"
        android:text="2020-08-23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>